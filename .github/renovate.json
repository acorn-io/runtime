{
    "labels": ["renovate"],
    "extends": [
        "config:base"
    ],
    "postUpdateOptions": ["gomodTidy"],
    "vulnerabilityAlerts": {
        "labels": ["security"]
    },
    "packageRules": [
        {
            "matchPackagePatterns": [
                "^golang.*"
            ],
            "groupName": "golang",
            "groupSlug": "golang"
        }
    ],
    "regexManagers": [
        {
            "description": "Match go versions in github workflows",
            "fileMatch": [
                "^.github/workflows/.*"
            ],
            "matchStrings": [
                "go-version: (?<currentValue>.*?)\n"
            ],
            "depNameTemplate": "golang",
            "datasourceTemplate": "docker"
        }
    ]
}
